<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.sajo.member.sql">
	<insert id="insertData" parameterType="com.sajo.dto.MemberDTO">
	insert into member (mid,mName,mPwd,mAddr,mTel,mEmail,mCreated)
	values (#{userId},#{userName},#{userPwd},#{userAddr},#{userTel},#{userEmail},sysdate)
	</insert>
	<delete id="deleteData" parameterType="String">
		delete member where mid=#{userId}
	</delete>
</mapper>