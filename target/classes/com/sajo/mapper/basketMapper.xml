<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.sajo.mapper.basket">

<!-- product테이블에서 pNum에 따른 정보 가져오기 -->

<select id="readPro" resultType="com.sajo.dto.BasketDTO" parameterType="int">
	
	select bNum,bAmount,bPName,bPrice,pNum from basket where pNum=#{pnum}

</select>

<select id="dataCount" resultType="int">
	select nvl(count(*),0) from basket
</select>

<select id="sumPro"  resultType="int" parameterType="int">
	select sum(bPrice) from basket where pNum=#{pnum}
</select>
	
</mapper>